package a;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.InputStream;
import java.io.OutputStream;
import java.util.Scanner;

public class Study {
	
	public static void main(String[] args) {
		
		/*
		 * 1. 스캐너를 통해서 파일명을 입력을 받습니다.
		 * 
		 * 2. 입력받은 파일을 filecopy로 복사해서 옮겨주면 됩니다.
		 * 
		 */
		
		Scanner scan = new Scanner(System.in);
		System.out.print(">");
		String name = scan.next();
		
		String readpath = "C:\\Users\\user\\Desktop\\course\\Java\\file\\" + name + ".png";
		String writepath = "C:\\Users\\user\\Desktop\\course\\Java\\filecopy\\" + name +"_copy.png";
		
		try( InputStream is = new FileInputStream(readpath); 
			 OutputStream out = new FileOutputStream(writepath) ) {
			
			byte[] arr = new byte[2048];
			int r1;
			while( (r1 = is.read(arr)) != -1) {
				
				out.write(arr, 0, r1);
				
			}
			
			
			
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		
	}
  
}
