package a;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.InputStream;
import java.io.OutputStream;

public class Study {
	
	public static void main(String[] args) {
		
		String readPath = "C:\\Users\\user\\Desktop\\course\\Java\\file\\건담.txt";
		String writePath = "C:\\Users\\user\\Desktop\\course\\Java\\file\\gd.txt";
		
		try(InputStream is = new FileInputStream(readPath);
			OutputStream out = new FileOutputStream(writePath) ) {
			
			byte[] arr = new byte[2048];
			
			int result;
			while( (result = is.read(arr)) !=- 1) {
				out.write(arr, 0, result);
				
			}
			
			
			
		} catch (Exception e) {
			e.printStackTrace();
		}
		
	}
	
	
        
  
}
